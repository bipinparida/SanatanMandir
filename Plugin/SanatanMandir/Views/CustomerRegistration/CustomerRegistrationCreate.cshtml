@using System.Collections;
@using Newtonsoft.Json;
@model CloudVOffice.Data.DTO.Customer.CustomerRegistrationDTO;

@{
    Layout = "_MainAppLayout";
    ViewData["Title"] = "CustomerRegistration";
}
@addTagHelper *, Syncfusion.EJ2
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<header class="main-heading">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8">
                <div class="page-icon">
                    <i class="icon-laptop_windows"></i>
                </div>
                <div class="page-title">
                    <h5>SanatanMandir Dashboard</h5>
                    <h6 class="sub-heading">Welcome to SanatanMandir Admin</h6>
                </div>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                <div class="right-actions">
                    <span class="last-login"></span>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="main-content">
    <div class="row gutters">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <form asp-route="SanatanMandir/CustomerRegistration/CustomerRegistrationCreate" method="post" autocomplete="off" enctype="multipart/form-data">

                    <div class="card-header">

                        <div class="row">
                            <div class="col-md-10">
                                <b>CustomerRegistration Create</b>
                            </div>
                            <div class="col-md-2 ">
                                <a href="/SanatanMandir/CustomerRegistration/CustomerRegistrationView" class="btn btn-primary btn-sm float-right"><i class="icon-list2"></i> List</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <input asp-for="@Model.CustomerRegistrationId" type="hidden" />
                                <label for="CustomerName" class="form-label">Customer Name</label>
                                <input asp-for="@Model.CustomerName" type="text" class="form-control" autofocus="autofocus" placeholder="Customer Name" />
                                <span asp-validation-for="CustomerName"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="Address" class="form-label">Address </label>
                                <input asp-for="@Model.Address" type="text" class="form-control" autofocus="autofocus" placeholder="Address " />
                                <span asp-validation-for="Address"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="PrimaryPhone" class="form-label">PrimaryPhone No </label>
                                <input asp-for="@Model.PrimaryPhone" type="text" class="form-control" autofocus="autofocus" placeholder="PrimaryPhone No " />
                                <span asp-validation-for="PrimaryPhone"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="AlternatePhone" class="form-label">AlternatePhone No </label>
                                <input asp-for="@Model.AlternatePhone" type="text" class="form-control" autofocus="autofocus" placeholder="AlternatePhone No " />
                                <span asp-validation-for="AlternatePhone"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            
                            <div class="form-group col-md-3">
                                <label for="MailId" class="form-label">MailId </label>
                                <input asp-for="@Model.MailId" type="text" class="form-control" autofocus="autofocus" placeholder="MailId " />
                                <span asp-validation-for="MailId"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="DateOfBirth" class="form-label">DateOfBirth </label>
                                <input asp-for="@Model.DateOfBirth" type="date" class="form-control" autofocus="autofocus" placeholder="DateOfBirth " />
                                <span asp-validation-for="DateOfBirth"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="Password" class="form-label">Password </label>
                                <input asp-for="@Model.Password" type="text" class="form-control" autofocus="autofocus" placeholder="Password " />
                                <span asp-validation-for="Password"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="Image" class="form-label">Image</label>
                                <input asp-for="@Model.ImageUp" type="file" class="form-control" autofocus="autofocus" placeholder="Image" />
                                <span asp-validation-for="Image"></span>
                                @{
                                    if (Model.Image != null)
                                    {
                                        <img src="/uploads/setup/@Model.Image" style="height:100px; width:100px" />
                                        <input type="hidden" asp-for="@Model.Image">
                                    }
                                }
                            </div>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="message-error"></div>
                    </div>
                    <div class="card-body">
                        <div class="col-lg-2 col-md-2 col-sm-12">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>



    <script>
        document.addEventListener("DOMContentLoaded", function () {

            var rememberCheckbox = document.getElementById("remember-check");
            var emailInput = document.getElementById("inputEmail");
            var passwordInput = document.getElementById("inputPassword");
            var loginForm = document.getElementById("loginForm");

            var rememberMeValue = getCookie("rememberMe");

            rememberCheckbox.checked = rememberMeValue === "true";

            if (rememberCheckbox.checked) {
                var storedEmail = getCookie("storedEmail");
                var storedPassword = getCookie("storedPassword");

                if (storedEmail) {
                    emailInput.value = storedEmail;
                }

                if (storedPassword) {
                    passwordInput.value = storedPassword;
                }
            }

            loginForm.addEventListener("submit", function () {
                setCookie("rememberMe", rememberCheckbox.checked, 7); // 7 days expiration

                if (rememberCheckbox.checked) {
                    setCookie("storedEmail", emailInput.value, 7);
                    setCookie("storedPassword", passwordInput.value, 7);
                }
            });

            function setCookie(name, value, days) {
                var expires = "";
                if (days) {
                    var date = new Date();
                    date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
                    expires = "; expires=" + date.toUTCString();
                }
                document.cookie = name + "=" + (value || "") + expires + "; path=/";
            }

            function getCookie(name) {
                var nameEQ = name + "=";
                var ca = document.cookie.split(';');
                for (var i = 0; i < ca.length; i++) {
                    var c = ca[i];
                    while (c.charAt(0) == ' ') c = c.substring(1, c.length);
                    if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length, c.length);
                }
                return null;
            }
        });
    </script>


